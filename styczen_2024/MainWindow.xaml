<Window x:Class="styczen_2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:styczen_2024"
        mc:Ignorable="d"
        Title="Wprowadzanie danych do paszportu." Height="450" Width="800"
        Background="#5F9EA0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="Numer" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Imię" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Nazwisko" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20"/>
                <TextBox Grid.Row="0" Grid.Column="1" Width="200px" Height="25px" x:Name="Number" LostFocus="ChangeImage"/>
                <TextBox Grid.Row="1" Grid.Column="1" Width="200px" Height="25px" x:Name="Name"/>
                <TextBox Grid.Row="2" Grid.Column="1" Width="200px" Height="25px" x:Name="Surname"/>
            </Grid>
            <Grid Grid.Row="1">
                <GroupBox Header="Kolor oczu" x:Name="GroupBoxEyes" Margin="30" >
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                        <RadioButton x:Name="BlueEyes" Content="Niebieskie" GroupName="EyesGroup" Height="30"/>
                        <RadioButton x:Name="GreenEyes" Content="Zielone" GroupName="EyesGroup" Height="30"/>
                        <RadioButton x:Name="BrownEyes" Content="Piwne" GroupName="EyesGroup" Height="30"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Images/000-zdjecie.jpg" Height="180" x:Name="Photo"/>
                <Image Grid.Column="1" Source="/Images/000-odcisk.jpg" Height="180" x:Name="Fingerprint"/>
            </Grid>
            <Grid Grid.Row="1">
                <Button Height="50" Width="300" Content="OK" x:Name="Submit" Click="OnClick"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
